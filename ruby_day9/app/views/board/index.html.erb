<!-- 로그인 되지 않은 상태 -->
<!-- @current_user.nil? -->
<% unless user_signed_in? %>
  <a href="/sign_in">로그인</a>
<!-- 로그인 된 상태 -->
<% else %>
  <p>현재 로그인한 유저: <%= @current_user.uid %></p>
  <a href="/logout">로그아웃</a>
<% end %>
<hr>
<div>
  <% @posts.each do |post| %>
    <a href="/board/<%= post.id %>"><%= post.title %></a>
  <% end %>
</div>
<%= link_to "새글쓰기", "/board/new" %>