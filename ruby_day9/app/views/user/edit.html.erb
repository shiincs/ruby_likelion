<h2>회원정보 수정</h2>
<hr>
<form action="/user/<%= @user.id %>" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="text" name="uid" value="<%= @user.uid %>" readonly placeholder="아이디를 입력하세요">
  <input type="password" name="pwd" value="<%= @user.password %>" placeholder="비밀번호를 입력하세요">
  <button>수정하기</button>
</form>