<h1>
  <strong>Title:</strong>
  <%= @post.title %>
</h1>
<hr>

<p>
  <strong>Contents:</strong>
  <%= @post.contents %>
</p>

<p>
  <strong>ImagePath:</strong>
  <img src="<%= @post.image_path %>" width="50%" />
</p>

<p>
  <strong>Thumb Fill:</strong>
  <img src="<%= @post.image_path.thumb_fill.url %>"/>
</p>

<p>
  <strong>Thumb Fit:</strong>
  <img src="<%= @post.image_path.thumb_fit.url %>"/>
</p>
<%= link_to '수정', edit_post_path(@post), class: 'btn btn-warning text-white' %>
<%= link_to '목록', cafe_path(@post.daum), class: 'btn btn-info' %>
<!-- @post가 어느 daum에 종속되어 있는지(@post가 속해있는 daum객체가 튀어나온다) -->
<%= link_to '삭제', post_path(@post), method: 'DELETE', class: 'btn btn-danger', data: {confirm: "삭제하시겠습니까?"} %>

<!-- 댓글 입력 -->
<%= render 'comments/form', post: @post %>

<!-- 댓글 리스트 -->
<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Content</th>
      <th scope="col">Button</th>
    </tr>
  </thead>
  <tbody>
    <% @post.comments.each do |comment| %>
    <tr>
      <th scope="row"><%= comment.id %></th>
      <td><%= comment.content %></td>
      <td><%= link_to "삭제", "/comments/#{comment.id}", method: "DELETE", data: {confirm: "댓글 삭제할랭?"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
