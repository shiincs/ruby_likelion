<h1><%= @movie.title %></h1>
<hr>
<p><%= @movie.description %></p>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
<hr>
<% if @like.nil? %>
  <button class="like btn btn-info">LIKE</button>
<% else %>
  <button class="like btn btn-warning text-white">UNLIKE</button>
<% end %>

<script>
$(document).on('ready', function() {
  $('.like').on('click', function() {
    console.log("like!!!");
    $.ajax({
      url: '/likes/<%= @movie.id %>'
    });
  });
});
</script>