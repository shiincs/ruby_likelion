if( <%= @like.frozen? %> ) {
  // 좋아요가 취소된 경우
  // 좋아요 취소 버튼 -> 좋아요 버튼
  alert('좋아요 취소');
  $('.like').text("LIKE").removeClass("btn-warning").addClass("btn-info");
  <!--$('.like').text("LIKE").toggleClass("btn-warning text-white btn-info");-->
} else {
  // 좋아요가 새로 눌린 경우
  // 좋아요 버튼 -> 좋아요 취소 버튼
  alert('좋아요');
  $('.like').text("UNLIKE").removeClass("btn-info").addClass("btn-warning text-white");
  <!--$('.like').text("UNLIKE").toggleClass("btn-info btn-warning text-white");-->
};

